{
    "manifest_version": 3,
    "name": "LinkedIn Profile Collector",
    "version": "1.0",
    "description": "Collect LinkedIn profile data and send to your API.",
    "permissions": [
      "tabs",
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/in/*"],
        "js": ["content.js"]
      }
    ]
  }
  